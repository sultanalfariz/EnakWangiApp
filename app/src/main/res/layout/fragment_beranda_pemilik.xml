<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Fragment.BerandaPemilikFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_welcome_2"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/konten_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_50">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/foto_user"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:riv_corner_radius="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/ic_default_user"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"/>

            <RelativeLayout
                android:id="@+id/konten_sapaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/text_hai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hallo,"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="@dimen/text_size_20"/>

                <TextView
                    android:id="@+id/text_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_hai"
                    android:text="User"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.08"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/text_size_15"/>

                <RelativeLayout
                    android:id="@+id/btn_tukar_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:background="@drawable/bg_btn_grey"
                    android:layout_below="@id/text_nama">

                    <TextView
                        android:id="@+id/text_tukar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemilik"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/text_size_10"
                        android:textStyle="bold"
                        android:textColor="@color/grey"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/konten_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_190"
                android:background="@drawable/top_round_background">

                <TextView
                    android:id="@+id/text_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Update Ternak Terdaftar"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:textSize="@dimen/text_size_18"/>

                <TextView
                    android:id="@+id/text_update2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_update"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Diperbarui setiap saat"
                    android:textColor="@color/grey_light"
                    android:textStyle="normal"
                    android:letterSpacing="0.08"
                    android:textSize="@dimen/text_size_12"/>

                <LinearLayout
                    android:id="@+id/konten_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_160"
                    android:orientation="horizontal"
                    android:layout_below="@id/text_update2"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_10"
                        android:layout_margin="@dimen/dp_5"
                        android:elevation="@dimen/dp_2">

                        <RelativeLayout
                            android:id="@+id/btn_olahraga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_5">

                            <ImageView
                                android:id="@+id/img_cow1"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:src="@drawable/success_cow"/>

                            <TextView
                                android:id="@+id/text_ket1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_cow1"
                                android:layout_marginTop="@dimen/dp_15"
                                android:layout_centerHorizontal="true"
                                android:text="Diverifikasi"
                                android:textColor="@color/grey_light"
                                android:textStyle="normal"
                                android:textSize="@dimen/text_size_13"
                                android:letterSpacing="0.05"/>

                            <TextView
                                android:id="@+id/jumlah_ternak_terverif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text_ket1"
                                android:layout_marginTop="@dimen/dp_8"
                                android:text="-"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_26"
                                android:letterSpacing="0.04"/>

                            <TextView
                                android:id="@+id/text_ternak1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/jumlah_ternak_terverif"
                                android:layout_marginTop="@dimen/dp_4"
                                android:text="Ternak"
                                android:textColor="@color/grey_light"
                                android:textStyle="normal"
                                android:textSize="@dimen/text_size_12"
                                android:letterSpacing="0.05"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/dp_10"
                        android:layout_margin="@dimen/dp_5"
                        android:elevation="@dimen/dp_2">

                        <RelativeLayout
                            android:id="@+id/btn_seni"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8"
                            android:layout_marginLeft="@dimen/dp_5">

                        <ImageView
                            android:id="@+id/img_cow2"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:src="@drawable/ic_ver_wait_home"/>

                        <TextView
                            android:id="@+id/text_ket2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_cow2"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="Belum Diverifikasi"
                            android:textColor="@color/grey_light"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_13"
                            android:letterSpacing="0.05"/>

                        <TextView
                            android:id="@+id/jumlah_ternak_pemilik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_ket2"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_26"
                            android:letterSpacing="0.04"/>

                        <TextView
                            android:id="@+id/text_ternak2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/jumlah_ternak_pemilik"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="Ternak"
                            android:textColor="@color/grey_light"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_12"
                            android:letterSpacing="0.05"/>

                    </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/konten_update"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Menu Utama"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/text_size_18"/>

                <LinearLayout
                    android:id="@+id/menu_utama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/text_menu"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_22">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/klik_add_ternak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_update2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:id="@+id/konten_minta_ib"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:id="@+id/img_minta_ib"
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:src="@drawable/ic_add_newest"/>

                            <TextView
                                android:id="@+id/text_info_ternak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/img_minta_ib"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:text="Tambah Ternak"
                                android:textColor="@color/grey"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:textSize="@dimen/text_size_17"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:id="@+id/img_right"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginRight="@dimen/dp_8"
                                android:src="@drawable/ic_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/klik_add_ternak_dis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_add"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="@dimen/dp_90"
                            android:src="@drawable/ic_add_newest"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/add_ternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_add"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_centerHorizontal="true"
                            android:text="Tambah Ternak"
                            android:textColor="@color/grey"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_14"
                            android:letterSpacing="0.04"/>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/klik_daftar_ternak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_update2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:id="@+id/konten_minta_ib1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:id="@+id/img_minta_ib1"
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:src="@drawable/ic_list_newest"/>

                            <TextView
                                android:id="@+id/text_info_ternak1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/img_minta_ib1"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:text="Daftar Ternak"
                                android:textColor="@color/grey"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:textSize="@dimen/text_size_17"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:id="@+id/img_right1"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginRight="@dimen/dp_8"
                                android:src="@drawable/ic_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/klik_daftar_ternak_dis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_wait"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="@dimen/dp_90"
                            android:src="@drawable/ic_list_newest"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/wait_ternak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_wait"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_centerHorizontal="true"
                            android:text="Daftar Ternak"
                            android:textColor="@color/grey"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_14"
                            android:letterSpacing="0.04"/>

                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/klik_ternak_wait"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_update2"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginRight="@dimen/dp_3"
                        app:cardCornerRadius="@dimen/dp_15"
                        app:cardElevation="@dimen/dp_3"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <RelativeLayout
                            android:id="@+id/konten_minta_ib2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_8">

                            <ImageView
                                android:id="@+id/img_minta_ib2"
                                android:layout_width="@dimen/dp_45"
                                android:layout_height="@dimen/dp_45"
                                android:layout_marginLeft="@dimen/dp_8"
                                android:src="@drawable/ic_verify_newest"/>

                            <TextView
                                android:id="@+id/text_info_ternak2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/img_minta_ib2"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:text="Menunggu Verifikasi"
                                android:textColor="@color/grey"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:textSize="@dimen/text_size_17"
                                android:layout_centerVertical="true"/>

                            <ImageView
                                android:id="@+id/img_right2"
                                android:layout_width="@dimen/dp_30"
                                android:layout_height="@dimen/dp_30"
                                android:layout_marginRight="@dimen/dp_8"
                                android:src="@drawable/ic_right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <RelativeLayout
                        android:id="@+id/klik_ternak_wait_dis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/img_verif"
                            android:layout_width="@dimen/dp_90"
                            android:layout_height="@dimen/dp_90"
                            android:src="@drawable/ic_verify_newest"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/ternak_verif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_verif"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_centerHorizontal="true"
                            android:text="Tahap Verifikasi"
                            android:textColor="@color/grey"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_14"
                            android:letterSpacing="0.01"/>

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_utama"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:text="Artikel"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/text_size_18"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/text_lihat_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_utama"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:text="Lihat semua"
                    android:textColor="@color/blue"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_artikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_artikel"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_info_kosong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_artikel"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="Tidak ada artikel"
                    android:letterSpacing="0.1"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/grey"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>