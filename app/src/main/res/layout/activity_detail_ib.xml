<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Activity.DetailIbActivity">

    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_pemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Permintaan IB"
            android:textSize="@dimen/text_size_17"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/arrow_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_area">

        <LinearLayout
            android:id="@+id/konten_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Kode Anting"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_kode_anting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Status"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_status_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="Keterangan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_keterangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/black"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="Tanggapan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_tanggapan_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/black"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_tanggapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Tanggal Cek Birahi"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_tgl_cek_birahi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/text_tgl_tinjau"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="Tanggal Suntik IB"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_tgl_suntik_ib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/orange"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_petugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Ditinjau Oleh"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_nama_petugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/text_nip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="NIP"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_nip_petugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/black"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_jenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Birahi"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/dp_280"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_5"
                            android:layout_weight="3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/form_birahi"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:gravity="left|center"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_form"
                                    android:hint="Pilih"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_15" />

                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/keyboard_arrow_down"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/keyboard_arrow_down"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/send_birahi_deactive"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_grey"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/send_birahi_active"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_green"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_obat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="Hamil"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/dp_280"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_5"
                            android:layout_weight="3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/form_hamil"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:gravity="left|center"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_form"
                                    android:hint="Pilih"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_15" />

                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/keyboard_arrow_down"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/send_hamil_deactive"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_grey"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/send_hamil_active"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_green"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_dosis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="Lahir"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/dp_280"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_5"
                            android:layout_weight="3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <TextView
                                    android:id="@+id/form_lahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:gravity="left|center"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_form"
                                    android:hint="Pilih"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_15" />

                                <ImageView
                                    android:layout_width="@dimen/dp_30"
                                    android:layout_height="@dimen/dp_30"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/keyboard_arrow_down"
                                    android:layout_centerVertical="true"/>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/send_lahir_deactive"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_grey"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/send_lahir_active"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_green"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="Tanggal Lahir"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/dp_280"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:cardCornerRadius="@dimen/dp_5"
                            app:cardElevation="@dimen/dp_5"
                            android:layout_weight="3">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10">

                                <EditText
                                    android:id="@+id/form_tgl_lahir"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/bg_form"
                                    android:hint="Tanggal Lahir"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_15" />

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/send_tgl_deactive"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_grey"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/send_tgl_active"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="@dimen/dp_45"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_5"
                            android:src="@drawable/btn_send_green"
                            android:visibility="gone"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>