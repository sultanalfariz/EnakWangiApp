<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Activity.TinjauLaporanActivity">

    <RelativeLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_pemilik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peninjauan Layanan"
            android:textSize="@dimen/text_size_17"
            android:letterSpacing="0.1"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/arrow_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_area">

        <LinearLayout
            android:id="@+id/konten_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/konten_info"
                android:background="#3B0026FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.1"
                    android:text ="ALAMAT KANDANG" />


                <TextView
                    android:id="@+id/text_alamat_kandang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/black"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="@dimen/dp_2"
                    android:text =""
                    android:textAllCaps="true"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_kode_anting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Kode Anting"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_kode_anting_ternak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Status Laporan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_status_laporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/text_ket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="Keterangan Laporan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_ket_laporan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/black"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Tanggapan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_tanggapan_lapor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:letterSpacing="0.05"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="Tanggap Peninjauan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <TextView
                        android:id="@+id/text_tgl_peninjauan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/orange"
                        android:letterSpacing="0.05"
                        android:textSize="@dimen/text_size_16"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_tanggapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Diagnosa"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <EditText
                                android:id="@+id/form_diagnosa"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="Diagnosa Sakit"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Gejala"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <TextView
                                android:id="@+id/form_gejala"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:gravity="left|center"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="-Pilih-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/text_morb_mort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Morbiditas-Mortalitas"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <TextView
                                android:id="@+id/form_morb_mort"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:gravity="left|center"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="-Pilih-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_5"
                app:cardCornerRadius="@dimen/dp_15"
                app:cardElevation="@dimen/dp_3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tindakan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:text="Jenis Tindakan"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <TextView
                                android:id="@+id/form_tindakan"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:gravity="left|center"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="-Pilih-"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Obat"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <EditText
                                android:id="@+id/form_obat"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="Obat"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Dosis"
                        android:textColor="@color/grey"
                        android:textStyle="normal"
                        android:letterSpacing="0.08"
                        android:textSize="@dimen/text_size_12"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        app:cardCornerRadius="@dimen/dp_5"
                        app:cardElevation="@dimen/dp_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10">

                            <EditText
                                android:id="@+id/form_dosis"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_35"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_form"
                                android:hint="Dosis"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_15" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/btn_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/bg_btn_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/text_masuk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Kirim"
                            android:letterSpacing="0.15"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_17"
                            android:textStyle="normal" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>